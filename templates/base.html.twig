<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% block invetory %}
                <a href="http://127.0.0.1:8000/inventory">INVENTORY</a>
            {% endblock %}
            {% block orders %}
                <a href="http://127.0.0.1:8000/orders">ORDERS</a>
            {% endblock %}
            {% block suppliers %}
                <a href="http://127.0.0.1:8000/suppliers">SUPPLIERS</a>
            {% endblock %}
            {% block newOrder %}
                <a href="http://127.0.0.1:8000/newOrder">NEW ORDER</a>
            {% endblock %}
            {% block newSupplier %}
                <a href="http://127.0.0.1:8000/newSupplier">NEW SUPPLIER</a>
            {% endblock %}
        {% endblock %}
        {% block body %}
        {% endblock %}
    </body>
</html>
