{% extends 'table.html.twig' %}

{% block title %}
        Inventory
{% endblock %}

{% block table %}
    <table>
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>QUANTITY</th>
    </tr>
    {% for row in result %}
        <tr>
            {% for cell in row %}
            <td>
                {{cell}}
            </td>
            {% endfor %}
            <td>
                <a href="/changeQuantity/{{row["id"]}}">Decrease by 1</a>
            </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}